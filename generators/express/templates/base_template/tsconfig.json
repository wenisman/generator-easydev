{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [
      "es2015.promise",
      "es2017",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "#*": [
        "./src/app/*"
      ],
      "*": [
        "libs/*"
      ],
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
      "node_modules",
      "dist",
      "test",
      "**/*.spec.ts",
  ]
}